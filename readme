docker build -t brett-graphql:latest .

docker run -p 8181:8181 -d brett-graphql:latest

curl 127.0.0.1:8181/graphql -X POST -H 'Content-Type: application/json' -d '
{ "query": "{ hello }" }'

{"data":{"hello":"Hello world!"}}


curl https://kong-f40972acc5us3jemn.kongcloud.dev/graphql -X POST -H 'Content-Type: application/json' -d '{"query": "{ greet(name: \"Brett\") }"}'

{"data":{"greet":"Greetings, Brett!"}}

# and view the chrome dev tools example to send the graphql requests from chrome
